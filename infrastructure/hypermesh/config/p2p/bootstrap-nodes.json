    "replication_factor": 3,
    "max_record_age": "24h",
    "republish_interval": "12h",
    "record_ttl": "48h"
  },
  "security": {
    "enable_encryption": true,
    "require_authentication": true,
    "allowed_protocols": [
      "hypermesh/1.0.0",
      "stoq/1.0.0",
      "libp2p/1.0.0",
      "dht/1.0.0",
      "ml-inference/1.0.0"
