    "blacklist": [],
    "whitelist": []
  },
  "performance": {
    "connection_pool_size": 50,
    "message_timeout": "30s",
    "heartbeat_interval": "10s",
    "keep_alive_interval": "60s",
    "max_message_size": "10MB"
  },
  "regions": {
    "us-east-1": {
      "latency_threshold": "100ms",
      "bandwidth_threshold": "100Mbps",
      "preferred": true
    },
    "us-west-1": {
      "latency_threshold": "150ms", 
      "bandwidth_threshold": "100Mbps",
      "preferred": false
