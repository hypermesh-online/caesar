{
  "name": "satchel-wallet",
  "version": "1.0.0",
  "description": "Caesar Token Satchel Wallet - Multi-Chain Wallet Interface",
  "main": "index.js",
  "scripts": {
    "dev": "vite --port 3002",
    "build": "tsc && vite build",
    "build:analyze": "tsc && ANALYZE=true vite build",
    "preview": "vite preview",
    "start": "npm run dev",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:watch": "vitest --watch",
    "test:coverage": "vitest --coverage",
    "analyze": "npm run build:analyze && npm run analyze:open",
    "analyze:open": "npx serve bundle-analysis -s -l 3001",
    "analyze:stats": "npx vite-bundle-analyzer dist --analyze-mode static --report-filename bundle-analysis/stats.html",
    "bundle:size": "du -sh dist/ && echo '--- Detailed Bundle Analysis ---' && ls -lh dist/assets/*.js | grep -E '(index|core).*\\.js' | sort -k5 -hr",
    "bundle:baseline": "npm run build && npm run bundle:size > bundle-analysis/baseline-measurement.txt && echo 'Baseline measurement saved to bundle-analysis/baseline-measurement.txt'",
    "bundle:compare": "npm run build && npm run bundle:size > bundle-analysis/current-measurement.txt && echo '--- Comparison ---' && diff bundle-analysis/baseline-measurement.txt bundle-analysis/current-measurement.txt || true",
    "bundle:monitor": "npm run build && node bundle-analysis/monitor.js",
    "bundle:track": "node bundle-analysis/monitor.js"
  },
  "dependencies": {
    "@headlessui/react": "^2.2.7",
    "@heroicons/react": "^2.2.0",
    "@tanstack/react-query": "^5.87.4",
    "@walletconnect/web3-provider": "^1.8.0",
    "@web3modal/wagmi": "^5.1.11",
    "clsx": "^2.1.1",
    "date-fns": "^4.1.0",
    "ethers": "^6.13.4",
    "lucide-react": "^0.344.0",
    "qrcode": "^1.5.3",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-plaid-link": "^4.1.1",
    "react-qr-code": "^2.0.12",
    "tailwind-merge": "^2.6.0",
    "viem": "^2.37.5",
    "wagmi": "^2.16.9"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.8.0",
    "@testing-library/react": "^14.3.1",
    "@testing-library/user-event": "^14.6.1",
    "@types/qrcode": "^1.5.5",
    "@types/react": "^18.2.56",
    "@types/react-dom": "^18.2.19",
    "@typescript-eslint/eslint-plugin": "^7.0.2",
    "@typescript-eslint/parser": "^7.0.2",
    "@vitejs/plugin-react": "^4.2.1",
    "@vitest/ui": "^1.6.1",
    "autoprefixer": "^10.4.17",
    "eslint": "^8.56.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.5",
    "jsdom": "^23.2.0",
    "playwright": "^1.55.0",
    "postcss": "^8.4.35",
    "rollup-plugin-visualizer": "^6.0.3",
    "tailwindcss": "^3.4.1",
    "typescript": "^5.2.2",
    "vite": "^5.1.4",
    "vite-bundle-analyzer": "^1.2.3",
    "vite-plugin-bundle-analyzer": "^0.0.1",
    "vitest": "^1.6.1",
    "webpack-bundle-analyzer": "^4.10.2"
  }
}
